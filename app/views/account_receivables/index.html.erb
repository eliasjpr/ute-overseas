<%- model_class = AccountReceivable -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:invoice_date) %></th>
      <th><%= model_class.human_attribute_name(:invoice_number) %></th>
      <th><%= model_class.human_attribute_name(:amount_billed) %></th>
      <th><%= model_class.human_attribute_name(:amount_received) %></th>
      <th><%= model_class.human_attribute_name(:due_date) %></th>
      <th><%= model_class.human_attribute_name(:purchase_order) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @account_receivables.each do |account_receivable| %>
      <tr>
        <td><%= link_to account_receivable.id, account_receivable_path(account_receivable) %></td>
        <td><%= account_receivable.location %></td>
        <td><%= account_receivable.invoice_date %></td>
        <td><%= account_receivable.invoice_number %></td>
        <td><%= account_receivable.amount_billed %></td>
        <td><%= account_receivable.amount_received %></td>
        <td><%= account_receivable.due_date %></td>
        <td><%= account_receivable.purchase_order %></td>
        <td><%=l account_receivable.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_account_receivable_path(account_receivable), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      account_receivable_path(account_receivable),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_account_receivable_path,
            :class => 'btn btn-primary' %>
