    <%= f.label :purchase_order, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :purchase_order, :class => 'form-control' %>
    </div>
    <%= error_span(@account_receivable[:purchase_order]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            account_receivables_path, :class => 'btn btn-default' %>

<% end %>
