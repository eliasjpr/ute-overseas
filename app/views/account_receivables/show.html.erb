<%- model_class = AccountReceivable -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @account_receivable.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_date) %>:</strong></dt>
  <dd><%= @account_receivable.invoice_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_number) %>:</strong></dt>
  <dd><%= @account_receivable.invoice_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_billed) %>:</strong></dt>
  <dd><%= @account_receivable.amount_billed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_received) %>:</strong></dt>
  <dd><%= @account_receivable.amount_received %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @account_receivable.due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_order) %>:</strong></dt>
  <dd><%= @account_receivable.purchase_order %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              account_receivables_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_receivable_path(@account_receivable), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_receivable_path(@account_receivable),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
